<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Uygulama</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        #bdy {
            background: url(img/component.png);
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body id="bdy">
    <div class="container">
        <div name="fullnav" class="row justify-content-between" style="background-color: rgba(255, 255, 255, 0.8);">
            <div name="btkLogo" class="img-fluid col-3 m-3">
                <img src="~/img/component (1).png" class="resim1" />
            </div>
            <div name="navbar" class="col-6 mt-5">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a href="/Anasayfa" class="navbar-brand " style="color: #1E90B3; font-weight: bold; font-size: 15px; opacity: 1.0;">ANASAYFA</a>
                            <a href="/Home/Index" class="navbar-brand " style="color: #1E90B3; font-weight: bold; font-size: 15px; opacity: 1.0;">İZLEME AĞI</a>
                            <a href="/Rapor/Index" class="navbar-brand " style="color: #1E90B3; font-weight: bold; font-size: 15px; opacity: 1.0;">RAPORLAR</a>
                            <a href="/Home/Index" class="navbar-brand " style="color: #1E90B3; font-weight: bold; font-size: 15px; opacity: 1.0;">İÇERİKLER</a>
                            <a href="/Registration/Index" class="navbar-brand " style="color: #1E90B3; font-weight: bold; font-size: 15px; opacity: 1.0;">ÜYELİK</a>
                        </div>
                    </div>
                </nav>
            </div>
            <div name="ibbLogo" class="img-fluid col-2">
                <img src="~/img/component (2).png" class="resim2" />
            </div>
        </div>


    </div>
    <div>
        @RenderBody()
    </div>



    <footer class="footer text-muted">
        <div class="container">
            @*&copy; 2020 - Uygulama - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
