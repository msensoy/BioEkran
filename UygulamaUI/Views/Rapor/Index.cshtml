
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="container-fluid">
        <div name="fullnav" class="row justify-content-between" style="background-color: rgba(255, 255, 255, 0.8);">
            <div name="btkLogo" class="img-fluid col-3 m-3">
                <img src="~/img/component (1).png" class="resim1" />
            </div>
            <div name="navbar" class="col-6 mt-5">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a href="/Anasayfa" class="navbar-brand " style="color: #1E90B3; font-weight: bold; font-size: 25px; opacity: 1.0;">ANASAYFA</a>
                            <a href="/Home/Index" class="navbar-brand " style="color: #1E90B3; font-weight: bold; font-size: 25px; opacity: 1.0;">İZLEME AĞI</a>
                            <a href="/Rapor/Index" class="navbar-brand " style="color: #1E90B3; font-weight: bold; font-size: 25px; opacity: 1.0;">RAPORLAR</a>
                            <a href="/Content/Index" class="navbar-brand " style="color: #1E90B3; font-weight: bold; font-size: 25px; opacity: 1.0;">İÇERİKLER</a>
                            <a href="/Home/Index" class="navbar-brand " style="color: #1E90B3; font-weight: bold; font-size: 25px; opacity: 1.0;">İLETİŞİM</a>
                            <a href="/Registration/Index" class="navbar-brand " style="color: #1E90B3; font-weight: bold; font-size: 25px; opacity: 1.0;">ÜYELİK</a>
                        </div>
                    </div>
                </nav>
            </div>
            <div name="ibbLogo" class="img-fluid col-2">
                <img src="~/img/component (2).png" class="resim2" />
            </div>
        </div>
        

        <div class="row justify-content-center" style="width:100%;height:300px; margin-top:3%;">
            <div class="col-3 border" style="width:50%;">
                <div class="form-inline justify-content-between m-1">
                    <label for="ilceler" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">İlçe Seçiniz:</label>

                    <select id="ilceler" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        <option value="ilce" disabled>Bakırköy</option>
                        <option value="ilce" disabled>Beşiktaş</option>
                        <option value="ilce" disabled>Büyükçekmece</option>
                        <option value="ilce" disabled>Eminönü</option>
                        <option value="ilce" disabled>Esenler</option>
                        <option value="ilce" disabled>Eyüp</option>
                        <option value="ilce" disabled>Fatih</option>
                        <option value="ilce" disabled>Gaziosmanpaşa</option>
                        <option value="ilce">Kadıköy</option>
                        <option value="ilce" disabled>Şişli</option>
                        <option value="ilce" disabled>Ümraniye</option>
                        <option value="ilce" disabled>Üsküdar</option>
                    </select>
                </div>
                <div class="form-inline justify-content-between m-1">
                    <label>CihazID:</label>
                    <label id="deviceId" class="form-control"></label>
                </div>
                <div class="form-inline justify-content-between m-1">
                    <label>CihazName:</label>
                    <label id="deviceName" class="form-control"></label>
                </div>
                <div class="form-inline justify-content-between m-1">
                    <label>Working Mode:</label>
                    <label id="deviceWMode" class="form-control"></label>
                </div>
                <div class="form-inline justify-content-between m-1">
                    <label>Su Seviyesi:</label>
                    <label id="deviceWMode" class="form-control"></label>
                </div>
            </div>
            <div id="divCharts" class="col-7 border ml-3">
                @* graphics will come here *@
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        $(document).ready(function () {


            $.ajax({
                url: '/Home/GetDeviceInfo',
                data: { id: 1 },
                success: function (device) {
                    $("#deviceName").html(device.name);
                    $("#deviceId").html(device.id);
                    $("#deviceWMode").html(device.workingMode);

                    $("#divCharts").load(`/Home/GetCharts/1`);
                }
            });

        });
    </script>



</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</html>
