@{
    ViewData["Title"] = "Kayıt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UygulamaUI.Models.RegisterBindingModel
@Html.Partial("_Header");
<div class="container">
    <div class="alert-danger text-white">@ViewData["Hata"]</div>
    <div class="row justify-content-center">
        <div class="kayit col-5 border">
            @using (Html.BeginForm("Index", "Registration", FormMethod.Post))
            {

            <div class="form-group">
                <label>Mail Adresiniz:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Mail adresinizi giriniz.." })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="form-group">
                <label>Telefon Numaranız:</label>
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Telefon numaranızı giriniz.." })
                @Html.ValidationMessageFor(m => m.PhoneNumber)
            </div>
            <div class="form-group">
                <label>Şifreniz:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifrenizi giriniz.." })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group">
                <label>Şifre Onay:</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Tekrar şifrenizi giriniz.." })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <div class="form-inline justify-content-between mb-1">
                <a class="btn btn-warning" href="/Login/Index">Geri Dön</a>
                <button type="submit" class="btn btn-success">Tamamla</button>
            </div>

            }
        </div>
    </div>

</div>
